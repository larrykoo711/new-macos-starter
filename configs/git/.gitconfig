[user]
    name = Your Name
    email = your.email@example.com

[init]
    defaultBranch = main

[core]
    editor = code --wait
    autocrlf = input
    whitespace = fix
    excludesfile = ~/.gitignore_global
    pager = delta

[push]
    autoSetupRemote = true
    default = current

[pull]
    rebase = true

[fetch]
    prune = true

[rebase]
    autoStash = true

[merge]
    conflictstyle = diff3

[diff]
    colorMoved = zebra

[color]
    ui = auto

[alias]
    # Status
    st = status -sb

    # Log
    lg = log --oneline --graph --decorate
    ll = log --pretty=format:'%C(yellow)%h%Creset %s %C(green)(%cr)%Creset %C(blue)<%an>%Creset' --abbrev-commit
    last = log -1 HEAD

    # Branch
    br = branch
    co = checkout
    cob = checkout -b

    # Commit
    cm = commit -m
    ca = commit --amend
    cane = commit --amend --no-edit

    # Diff
    df = diff
    ds = diff --staged

    # Stash
    ss = stash save
    sp = stash pop
    sl = stash list

    # Reset
    unstage = reset HEAD --
    undo = reset --soft HEAD~1

    # Cleanup
    cleanup = "!git branch --merged | grep -v '\\*\\|main\\|master' | xargs -n 1 git branch -d"

    # Sync
    sync = "!git fetch --all && git rebase origin/main"

[credential]
    helper = osxkeychain

# Delta (better diff)
[delta]
    navigate = true
    light = false
    side-by-side = true
    line-numbers = true
